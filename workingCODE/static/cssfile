/* Root variable definitions for theming */
:root {
    --background-color: #000000; /* Dark mode background */
    --text-color: #00ff00; /* Dark mode text */
    --input-bg-color: #000; /* Dark mode input background */
    --input-text-color: #00ff00; /* Dark mode input text */
}

/* Light mode theme adjustments */
[data-theme="light"] {
    --background-color: #ffffff; /* Light mode background */
    --text-color: #000000; /* Light mode text */
    --input-bg-color: #fff; /* Light mode input background */
    --input-text-color: #000; /* Light mode input text */
}

/* Body and HTML are set to use the full viewport height and set up for flexbox */
html, body {
    height: 100%; /* Ensures full viewport height */
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column; /* Stacks children elements vertically */
    background-color: var(--background-color);
    color: var(--text-color);
    font-family: Arial, sans-serif; /* Sets a base font for consistency */
}

/* Flex container for all content except footer */
.content-wrapper {
    flex: 1; /* Takes up all available space pushing the footer to the bottom */
    display: flex;
    flex-direction: column; /* Keeps content in a vertical flow */
}

/* Styling for input fields */
input[type="text"], input[type="submit"] {
    background-color: var(--input-bg-color);
    color: var(--input-text-color);
    padding: 10px;
    font-size: 16px;
    border-radius: 5px;
    border: 1px solid #00ff00; /* Makes the border green */
}

/* General container for sections */
.container {
    text-align: center;
    margin: auto;
    padding: 50px;
    align-items: center;
    flex-grow: 1; /* Allows the container to grow and fill space */
}

/* Styling for footer element */
footer {
    text-align: center;
    padding: 20px 0;
    background-color: #333;
    color: white;
